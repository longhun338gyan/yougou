page, .container{
  height: 100%;
  background: #f6f6f6;
}
.address{
  padding-top: 20rpx;
  background: #fff;
}
.address-info {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  padding-right: 100rpx;
  position: relative;
}

.address-info::after {
  display: block;
  content: "";
  position: absolute;
  right: 25rpx;
  top: 35rpx;
  width: 16rpx;
  height: 16rpx;
  border-top: 1px #999 solid;
  border-right: 1px #666 solid;
  transform: rotate(45deg);
}

.detailed-address {
  padding: 20rpx;
  padding-top: 0;
}

.border {
  display: block;
  width: 100%;
  height: 15rpx;
}

.cart-title {
  display: flex;
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  border-top: 20rpx #eee solid;
  border-bottom: 1px #ddd solid;
  background: #fff;
}
.cart-title .iconfont {
  color: #999;
  margin-right: 20rpx;
}
.goods-item{
  display: flex;
  background: #fff;
  text-align: center;

}
.selected{
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods-info{
  display: flex;
  flex: 1;
  padding: 20rpx ;
  border-bottom: 1px solid #f6f6f6;
}
.goods-item .goods-info image{
  width: 150rpx;
  height: 150rpx;
  padding-right: 20rpx;
  flex-shrink: 0
}
.goods-item .goods-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  
}
.goods-item .goods-title{
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-item .goods-right-btm{
  display: flex;
  justify-content: space-between;

}
.goods-item .goods-right-btm .goods-price{
  margin-top: 50rpx;
}
.goods-item .goods-right-btm .goods-price text{
  
  color: red;
}
.goods-item .goods-right-btm .goods-nums{
  margin-top: 50rpx;
  display: flex;
}
.goods-item .goods-nums-btn{
  width: 50rpx;
  height: 40rpx;
  border: 1px solid #666;
  text-align:  center;
  margin: 0 10rpx;
}
.goods-item .goods-nums text{
  height: 50px;
  line-height: 50rpx;
  margin: 0 20rpx;
  color: #666;
  text-align: center;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  font-size: 14px;
  height: 100rpx;
  width: 100%;
  background: #fff;
}
.footer .footer-left{
  height: 100%;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}
.footer .footer-left icon{
  margin-right: 20rpx;
}
.footer .footer-center{
  flex: 1;
  margin: 30rpx 50rpx;
}
.footer .footer-center .colorRed{
  color: red;
  
}
.footer .footer-center .colorGray{
  color: gray;
  font-size: 12px;
}
.footer-account{
  width: 220rpx;
  background: red;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
}