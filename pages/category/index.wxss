.container{
  position: absolute;
  width: 100%;
  top: 100rpx;
  bottom: 0;
}
.search{
  padding: 20rpx;
  background: #ff2d4a;
  margin-right: 10rpx;
}

.search-input{
  display: flex;
  height: 60rpx;
  background: #fff;
  border-radius: 4px;
  justify-content: center;
  align-items: center;
  font-size: 14rpx;
  color: #666;
}
.search-input icon{
  margin-right: 10rpx;
}
.main{
  display: flex;
  justify-content: space-between;
  height: 100%;
  position: relative;
}
.navs{
  width: 200rpx;
  background-color: #f6f6f6;
  position: absolute;
  left: 0;top: 0;
  height: 100%;
  overflow: scroll;

}
.navs-item{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  box-sizing: border-box;
  border-bottom: 1px #eee solid;
}
.navs .active{
  color: red;
  background: #fff;
  position: relative;
}
.navs .active::before{
  display: block;
  content: "";
  width: 4px;
  height: 60rpx;
  background: red;
  position: absolute;
  top: 20rpx;
  left: 0
}

.categorys
{
  position: absolute;
  left: 200rpx;
  right: 0;
  height: 100%;
  overflow: scroll;
  flex: 1;
  padding: 20rxp;
  box-sizing: border-box;
}
.categorys-title{
  text-align: center;
  margin-bottom: 20rpx 0;
}
.categorys-title text{
  margin:  0 20rpx;
  color: #666;
}
.categorys-list{
  display: flex;
  flex-wrap: wrap;
  font-size: 14px;
  color: #666;
  margin-bottom: 10rpx;
}
.categorys-item{
  width:33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}
.categorys-item image{
  width: 120rpx;
  height: 120rpx;
}
.categorys-item >view{
  width:100%;
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}